<%= simple_form_for(@content) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.cktext_area :body, :input_html => { :value => @content.body } %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
