<h1>Fotos</h1>

<%- flash.each do |name, msg| -%>
  <%= content_tag :div, msg, :id => "flash_#{name}", :class => "alert alert-#{name}" %>
<%- end -%>

<table class="table table-striped">
	<thead>
		<th>Foto</th>
		<th>Legenda</th>
		<th colspan="3">Ações</th>
	</thead>	
	<tbody>
		<% @news_photos.each do |p| %>
		  <tr>
		    <td>		    	
		    	<%= image_tag p.image_url(:thumb) %>
		    </td>
		    <td><%= p.legend %></td>
		    <td>
		      <%= link_to "Adicionar Legenda",  edit_news_photo_path(p), class: "btn btn-small btn-primary" %>
		    </td>
		    <td>
		      <%= link_to "Tornar Capa",  message_update_cover_path(@message, p), class: "btn btn-small" %>
		    </td>
		    <td>
		    	
		      <%= link_to "Excluir Foto", news_photo_path(p), :method => "delete", data: { confirm: 'Tem certeza?' }, class: "btn btn-small btn-danger" %>
		    </td>
		  </tr>
		<% end %>
			
	</tbody>
</table>

<script type="text/javascript">
$(document).ready(function() {
    $('#container-right').hide(); $("#top-carousel").hide();
    $('#content').removeClass('span9');
    // $('#content').addClass('full');
    $('#body').addClass('full');        
});
</script>