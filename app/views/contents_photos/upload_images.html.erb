<%= form_for ContentsPhoto.new do |f| %>
  <%= f.hidden_field :content_id, :value => @content.id %>
  <%= f.label :image, "Uploade de imagens:" %>
  <%= f.file_field :image, multiple: true, name: "contents_photo[image]" %>
<% end %>

<div id="photo" class="span12 centralize">
  <script id="template-upload" type="text/x-tmpl">
      <div class="upload">
          {%=o.name%}
          <div class="progress">
              <div class="bar" style="width: 0%;"></div>
          </div>
      </div>
  </script> 
</div>


<div class="links">
  <%= link_to "Adicione Legenda as fotos", content_view_photos_path(@content), :class => "btn btn-primary " %>
  <%= link_to "Salvar", site_index_path, :class => "btn btn-success " %>
</div>
