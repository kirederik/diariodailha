<h1>Preço</h1>

<table class="table striped">
  <tr>
    <th>Valor</th>
    <th>Tipo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @prices.each do |price| %>
  <tr>
    <td><%= price.value %></td>
    <td><%= price.price_type %></td>
    <td><%= link_to 'Ver', price %></td>
    <td><%= link_to 'Editar', edit_price_path(price) %></td>
    <td><%= link_to 'Apagar', price, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo preço', new_price_path %>
