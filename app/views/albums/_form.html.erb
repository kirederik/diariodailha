<%= simple_form_for(@album) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :beach %>
    <%= f.input :peak %>
    <%= f.input :date %>
    <%= f.association :photographer %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
