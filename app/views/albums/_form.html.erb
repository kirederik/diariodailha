<%= simple_form_for(@album) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :required => true, :label => false, :class => 'block leform', :placeholder => 'Nome: ' %>
    <%= f.input :beach, :required => true, :label => false, :class => 'block leform', :placeholder => 'Praia: ' %>
    <%= f.input :peak, :required => true, :label => false, :class => 'block leform', :placeholder => 'Pico: ' %>
    <%= f.input :date, :label => false, :as => :datepicker, :placeholder => "Data:" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Salvar', :class => 'btn btn-primary' %> 
