<%= simple_form_for(@banner) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :label => false, :placeholder => "Nome: " %>
    <%= f.input :position, :label => false, :as => :select, :include_blank => false, :collection => ['top-banner', 'med-banner', 'side-1', 'side-2', 'side-3', 'side-4', 'side-5'] %>
    <%= f.input :link, :label => false, :placeholder => "Link" %>
    <%= f.file_field :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :value => "Salvar" %>
  </div>
<% end %>
