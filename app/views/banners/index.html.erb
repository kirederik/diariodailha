<h1>Todos os Banners</h1>

<table class="table striped">
  <tr>
    <th>Nome</th>
    <th>Posição</th>
    <th>Link</th>
    <th></th>
    <th></th>
  </tr>

<% @banners.each do |banner| %>
  <tr>
    <td><%= banner.name %></td>
    <td><%= banner.position %></td>
    <td><%= banner.link %></td>
    <td><%= link_to 'Ver', banner %></td>
    <td><%= link_to 'Editar', edit_banner_path(banner) %></td>
    <td><%= link_to 'Apgar', banner, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Banner', new_banner_path %>
